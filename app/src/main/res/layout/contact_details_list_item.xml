<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/contactDetailRVIconIV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactDetailNumOrEmailRVTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hello"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/contactDetailRVIconIV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactDetailTypeRVTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Hello"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/contactDetailRVIconIV"
        app:layout_constraintTop_toBottomOf="@+id/contactDetailNumOrEmailRVTV" />

</androidx.constraintlayout.widget.ConstraintLayout>